<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.News.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">@color/purple_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ValidatableInputLayoutStyle.OutlineBox.HintInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textSize">18sp</item>
        <item name="boxStrokeColor">@color/purple_700</item>
        <item name="android:textColorHint">@color/purple_500</item>
    </style>

    <style name="vizitin_plus_button_style" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/titillium_light</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:colorAccent">@color/purple_500</item>
        <item name="backgroundTint">@color/purple_200</item>
        <item name="colorButtonNormal">@color/purple_700</item>
        <item name="colorControlHighlight">@color/teal_200</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/teal_700</item>
        <item name="strokeWidth">2dp</item>
        <item name="elevation">@null</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:translationX">0dp</item>
        <item name="android:translationY">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:shadowColor">@color/transparent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>

    <!-- Dialogs -->

    <style name="AlertDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.NegativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.PositiveButton</item>
        <item name="android:textColor">@color/background_gray</item>
    </style>

    <style name="AlertDialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/background_gray</item>
    </style>
    <style name="AlertDialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/background_gray</item>
    </style>

    <style name="Theme.TheNews.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.TheNews.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">

    </style>
</resources>